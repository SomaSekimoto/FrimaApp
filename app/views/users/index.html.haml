= render partial: "items/header"
- breadcrumb :mypage
= render "layouts/breadcrumbs"
.container-show 
  = render "side-bar"
  .main
    %section.main__group
      %h2.main__group__title
        =@user.nickname + "さん"
    %section.main__table
      %h2.main__table__header
        重要なお知らせ
      %li.main__table__list
        = link_to "住所の設定を行ってください", "#"
    %section.main__table
      %h2.main__table__header
        商品購入
      %ul.main__table__list
        - @items_purchase.each do |item|
          %li
            =link_to item_path(item), class: "main__table__list__item" do
              %figure 
                = image_tag asset_path(item.images[0].content), :size =>'48x64'
              .main__table__list__item__body
                .main__table__list__item__body__text
                = item.name
                %br
                = item.price
                円
              %i.fas.fa-chevron-right
    %section.main__table
      %h2.main__table__header
        出品した商品
      %ul.main__table__list
        - @items_new.each do |item|
          %li
            =link_to item_path(item), class: "main__table__list__item" do
              %figure 
                = image_tag asset_path(item.images[0].content), :size =>'48x64'
              .main__table__list__item__body
                .main__table__list__item__body__text
                = item.name
                %br
                = item.price
                円
              %i.fas.fa-chevron-right
= render partial: "items/footer"


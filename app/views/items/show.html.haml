.show
  .show__main
    .content
      .content__top
        .item
          %h2.item__name 
            = @item.name
          .item__img
            %ul.item__img__list
              %li.item__img__list__top
                = image_tag @images.first[:content], class:"img-top"
                - if @images.length{[:content] >= 2 }
                  %ul.bottom
                    .bottom__list
                      - @images.each do |images|
                        %li
                          = image_tag images[:content], class:"img-bottom"
          .item__price 
            %span 
              = @item.price 
              円
            .item__price-tax
              %span 
                (税込)
              %span 
                送料込み
          -if current_user.id == @item.user_id
            =link_to edit_item_path do
              %button{type: "button", class:'item__edit'}
                商品の編集
            .or or
            =link_to "#" do
              %button{type: "button", class:'item__delete'}
                この商品を削除する
          -else
            =link_to confirm_item_path do
              %button{type: "button", class:'item__purchase'}
                購入画面に進む
          .item__description= @item.description
          %table{:border => "1"}
            %tbody
              %tr 
                %th 出品者
                %td hoge
              %tr
                %th カテゴリ
                %td
                  レディース
                  %br
                  トップス
                  %br
                  Tシャツ/カットソー(半袖/袖なし)
              %tr
                %th ブランド
                %td= @brand.name
              %tr
                %th 商品のサイズ
                %td
              %tr
                %th 商品の状態
                %td= @item.condition
              %tr
                %th 配送料の負担
                %td= @item.fee
              %tr
                %th 発送元の地域
                %td= @area
              %tr
                %th 発送日のめ目安
                %td= @shipping_day
          .option
            %ul.option__like
              %li.option__like-btn1
                %i ⭐️
                お気に入り 0
            %ul.option__report
              %li.option__report-btn2
                %i 🇯🇵
                不適切な商品の通報 
        .commentBox
          = form_with model: @comments, class: "comment-new" do |f|
            = f.text_area :text, class: "comment-body"
            %p.caution
              相手のことを考え丁寧なコメントを心がけましょう。
              %br
              不快な言葉遣いなどは利用制限や退会処分となることがあります。
              %br
            = f.submit "●コメントする", class: "comment-btn"
      %ul.switch
        %li.switch__before
          %i <
          前の商品
        %li.switch__after
          .span 後ろの商品 >
          %i
      .other
        レディースをもっと見る
        

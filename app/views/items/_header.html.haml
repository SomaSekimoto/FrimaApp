.header
  .header__headerBox
    .header__headerBox__headerMain
      .header__headerBox__headerMain__logo
        = link_to image_tag('logo.png'), root_path
      .header__headerBox__headerMain__searchForm
        %form
          %input{ placeholder: "キーワードから探す"}
          %button{type: "submit"}
            .btnIcon
              = image_tag "icon-search 1.png"   
    .header__headerBox__nav
      %ul.header__headerBox__nav__leftMenu
        %li.header__headerBox__nav__leftMenu__list--first
          = link_to "カテゴリー","#", id: "catBtn"
        %li.header__headerBox__nav__leftMenu__list
          = link_to "ブランド","#", id: "brandBtn"
      -if user_signed_in?
        %ul.header__headerBox__nav__rightMenu
          %li.header__headerBox__nav__rightMenu__list--login
            = link_to "ログアウト", destroy_user_session_path, method: :delete
      -else
        %ul.header__headerBox__nav__rightMenu
          %li.header__headerBox__nav__rightMenu__list--login
            = link_to "ログイン", new_user_session_path
          %li.header__headerBox__nav__rightMenu__list--new
            = link_to "新規会員登録", new_user_registration_path
